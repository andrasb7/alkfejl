{% extends "layout" %}

{% block content %}

<h1>{{ name }}</h1>

<div class="row">

  {% for type in types %}
  <div class="col-lg-4 col-md-6 col-sm-12">
    <div class="panel panel-primary">
      <div class="panel-heading">{{ type.name }}</div>
      <ul class="list-group">
        {% for subject in type.topSubjects %}
        <li class="list-group-item">
          <a href="/subjects/{{ subject.id }}">
            {{ subject.name }}
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  {% endfor %}

</div>
{% endblock %}
