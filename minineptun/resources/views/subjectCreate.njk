{% extends "layout" %}

{% block content %}
<h2>Új Tantárgy</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}


<form class="form-horizontal" method="post">

  {{ csrfField }}

  <div class="form-group">
    <label for="name" class="col-lg-2 control-label">Tárgy neve</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="name" name="name" placeholder="Tárgy neve" value="{{old('name')}}">
    </div>
  </div>
  <div class="form-group">
    <label for="semester" class="col-lg-2 control-label">Félév</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="semester" name="semester" placeholder="Félév" value="{{old('semester')}}">
    </div>
  </div>
  <div class="form-group">
    <label for="credit" class="col-lg-2 control-label">Kredit</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="credit" name="credit" placeholder="Kredit" value="{{old('credit')}}">
    </div>
  </div>
  <div class="form-group">
    <label for="type_id" class="col-lg-2 control-label">Típus</label>
    <div class="col-lg-10">
      <select class="form-control" id="type_id" name="type_id">
        {% for type in types %}
        <option value="{{ type.id }}"
          {% if type.id == old('type_id') %}
          selected
          {% endif %}
        >{{ type.name }}</option>
        {% endfor %}
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Mégsem</button>
      <button type="submit" class="btn btn-primary">Küldés</button>
    </div>
  </div>
</form>

{% endblock %}